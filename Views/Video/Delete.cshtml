@model PakProperties.Models.Video

@{
    ViewData["Title"] = "Delete Video";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-danger fw-bold mb-4 animate__animated animate__zoomIn">Delete Video</h1>
    <div class="alert alert-warning text-center">
        Are you sure you want to delete this video? This action cannot be undone.
    </div>
    <div class="card shadow-lg mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <video class="w-100 rounded shadow" src="@Url.Content(Model.FilePath)" controls autoplay></video>
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th>Type:</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Location:</th>
                            <td>@Model.Location</td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Full Name:</th>
                            <td>@Model.User?.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.User?.Email</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>
