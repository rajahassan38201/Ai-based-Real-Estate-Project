@model PakProperties.Models.Video

@{
    ViewData["Title"] = "Video Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3 animate__animated animate__zoomIn">
    <div class="card shadow-lg">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <video class="w-100 rounded shadow" src="@Url.Content(Model.FilePath)" controls autoplay></video>
                </div>
                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th>Type:</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Location:</th>
                            <td>@Model.Location</td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Full Name:</th>
                            <td>@Model.User?.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.User?.Email</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer text-center mb-3">
            <a class="btn btn-outline-dark mt-3" asp-action="AllVideos">Back to List</a>

        </div>
    </div>
</div>