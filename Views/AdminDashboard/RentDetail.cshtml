@model PakProperties.Models.Rent

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3 animate__animated  animate__zoomIn">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-black text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body ">
            <div class="row">
                <div class="col-md-6">
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
                            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
                            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
                            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
                            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/images/sell/@Model.PrimaryImageUrl" alt="First slide">
                                </div>
                                @if (Model.ImageUrl2 != "")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/images/sell/@Model.ImageUrl2" alt="Second slide">
                                    </div>
                                }
                                @if (Model.ImageUrl3 != "")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/images/sell/@Model.ImageUrl3" alt="Third slide">
                                    </div>
                                }
                                @if (Model.ImageUrl4 != "")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/images/sell/@Model.ImageUrl4" alt="Third slide">
                                    </div>
                                }
                                @if (Model.ImageUrl5 != "")
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/images/sell/@Model.ImageUrl5" alt="Third slide">
                                    </div>
                                }
                            </div>
                        </div>
                        <a class="carousel-control-prev " href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon btn btn-dark" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                            <span class="carousel-control-next-icon btn btn-dark" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>

                <div class="col-md-6">
                    <table class="table table-bordered">
                        <tr>
                            <th>Type:</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Description:</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>City:</th>
                            <td>@Model.City</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th>Bedrooms:</th>
                            <td>@Model.Bedrooms</td>
                        </tr>
                        <tr>
                            <th>Bathrooms:</th>
                            <td>@Model.Bathrooms</td>
                        </tr>
                        <tr>
                            <th>Area Size:</th>
                            <td>@Model.AreaSize Marla</td>
                        </tr>
                        <tr>
                            <th>Price:</th>
                            <td>PKR @Model.Price</td>
                        </tr>
                        <tr>
                            <th>Owner Name:</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Mobile No:</th>
                            <td>@Model.MobileNo</td>
                        </tr>
                        <tr>
                            <th>Created At:</th>
                            <td>@Model.CreatedAt.ToString("f")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="card-footer text-center mb-3">
            <a class="btn btn-outline-dark mt-3" asp-action="RentProperties">Back to List</a>
        </div>

    </div>
</div>
<script>
        $(document).ready(function () {
        $('.carousel').carousel();
    });

</script>
