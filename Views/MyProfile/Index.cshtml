@model PakProperties.Models.UserProfile
@{
    Layout = "_UserLayout";
}
<h1>My Profile</h1>
<div class=" animate__animated  animate__zoomIn gray2 rounded rounded-5 p-md-5 mt-3">
<div>
    <h4>User Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.UserName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-controller="MyProfile" asp-action="Edit">Edit</a> |
    <a class="btn btn-danger" asp-controller="MyProfile" asp-action="Delete">Delete Account</a> |
    <a class="btn btn-orange" asp-controller="Account" asp-action="ForgotPassword">Change Password</a>
</div>
</div>